<textarea class='message' name='message' placeholder='{{t "messagePlaceholder"}}'></textarea>

<div class="groups form_field">
  <label for>{{t "groupsLabel"}}</label>
  <ul class="span12 token_list highlightable">
    <li class="add_token"><input class="highlightable" type="text"></li>
  </ul>
</div>


<div class="pull-right">
  <a href="#" class='cancel'>{{t "cancelButton"}}</a>
  <button class="btn-primary" id="send-msg" disabled="disabled">
    {{t "sendMessageButton"}}
  </button>
</div>
